@model PaginatedList<HRSystemCore.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" onclick="location.href = '@Url.Action("Create", "People")'">Add New</button>
</p>



    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Filter : <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Filter" class="btn btn-primary" />
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Records Per Page: <input type="text" name="pageSizeStr" value="@ViewData["currentPageSize"]" />
                <input type="submit" value="Update" class="btn btn-primary" /> 
                <a asp-action="Index"></a>
            </p>
        </div>
    </form>


    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Last Name</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">First Name</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CompanyNameParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Company</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DeptNameParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Department</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusNameParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Status</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["EmpNumParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Employee #</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateOfBirthParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Date of Birth</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Status1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PersonId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PersonId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PersonId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-pageSizeStr="@ViewData["currentPageSize"]"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-pageSizeStr="@ViewData["currentPageSize"]"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Next
    </a>
